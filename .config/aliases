# vim: ft=sh

alias grep='grep --color=auto --ignore-case'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ls='exa --color=auto --icons --group'
alias ll='ls -alF'
alias la='ls -a'
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias ..='cd ..'
alias cls=clear
alias aptup='sudo apt update && sudo apt list --upgradable'
alias diff='diff --color'
alias tree='exa --tree --icons'
alias wget='wget --hsts-file $HOME/.config/wget/wget-hsts'
alias vim=nvim
alias env='env | grep -v LS_COLORS | sort'
alias g=git
alias docker-rm-all="docker rm -f $(docker ps -a -q)"
alias docker-rm-vol="docker volume rm $(docker volume ls -q)"
alias docker-rm-img="docker rmi -f $(docker images -a -q)"

if [ -f "/usr/bin/fdfind" ]; then
    alias fd='fdfind'
fi
